{
  "name": "Network Load Indicator",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "description": "Shows your continuous network load caused by chrome.",
  "background": {
    "page": "background.html"
  },
  "incognito": "spanning",
  "minimum_chrome_version": "25",
  "offline_enabled": false,
  "options_page": "options.html",
  "permissions": [
    "webRequest",
    "<all_urls>",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_title": "Show network load",
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  }
}